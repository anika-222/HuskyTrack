cat > .gitignore <<'EOF'
# Node & package artifacts
**/node_modules/
.pnp
.pnp.js
*.tsbuildinfo

# Build outputs
build/
dist/
**/build/
**/dist/
.eslintcache
.parcel-cache
.turbo/
storybook-static/
.next/
.nuxt/

# Test coverage
coverage/

# Env (keep examples tracked)
.env
.env.*.local
.env.local
.env.development.local
.env.test.local
.env.production.local
!.env.example
!.env.*.example
.envrc

# Logs
*.log
npm-debug.log*
yarn-debug.log*
yarn-error.log*
pnpm-debug.log*
lerna-debug.log*

# IDE/editor
.vscode/
.idea/
*.swp
*.swo

# OS cruft
.DS_Store
.DS_Store?
._*
.Spotlight-V100
.Trashes
ehthumbs.db
Thumbs.db
EOF

git add .gitignore
